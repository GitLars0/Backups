@page
@model Lab3.Pages.OrderOverviewModel
@{
    ViewData["Title"] = "Order Overview";
}

<div class="text-center mt-4">
    <h1 class="display-4 mt-5">Order Overview</h1>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders){
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Customer.Name</td>
                    <td>@order.Status</td>
                    <td><a asp-page="OrderDetails" asp-route-orderId="@order.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>


</div>